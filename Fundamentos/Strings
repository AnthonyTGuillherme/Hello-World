const escola = "Cod3r"

console.log(escola.charAt(4)) //pega um determinado caractere dentro da string
console.log(escola.charAt(5)) //vai retornar vazio e n√£o erro
console.log(escola.charCodeAt(3)) //pega o codigo daquele caractere 
console.log(escola.indexOf('3')) //pega o indice do caractere

console.log(escola.substring(1)) // passa o indice inicial
console.log(escola.substring(0, 3)) // passa o indice inicial e o final

console.log('Escola '.concat(escola).concat("!")) // concatena 
console.log('Escola '+ escola + "!") // o simbolo de + tbm serve como concat
console.log(escola.replace(3, 'e')) //ele troca o caractere por outro

console.log('Ana,Maria,Pedro'.split(',')) //ele quebra a string e vira array
